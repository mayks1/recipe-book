<%- include('includes/head') %>
<%- include('includes/header') %>

    <section class="section lb">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-wrapper">

                        <div class="recipe-image">
                            <img class="responsive-img" src="<%= recipe.image %>" allowfullscreen></img>
                        </div>
                            
                        <div class="blog-title-area">
                            <ol class="breadcrumb hidden-xs-down">
                                <li class="breadcrumb-item"><a href="/">Начало</a></li>
                                <li class="breadcrumb-item"><a href="#">Блог</a></li>
                                <li class="breadcrumb-item active"><%= recipe.title %></li>
                            </ol>

                            <span class="color-red" style="color: #a3a5a8;">Категория: <a href="blog-category-01.html" title=""><%= recipe.category %></a></span>

                            <h3 class="recipe-title"><%= recipe.title %></h3>

                            <div class="blog-meta big-meta">
                                <% var options = {year: 'numeric', month: 'long', day: 'numeric', weekday: 'long', timezone: 'UTC +2'}; %>
                                <small><a href="single.html" title=""><%= recipe.createdDate.toLocaleDateString("bg", options) %></a></small>
                                <small><a href="blog-author.html" title="">публикувана от: <span class="d-inline" style="color: rgb(255, 255, 255);"><%= recipe.author.username %></span></a></small>
                                <small><a href="#" title=""><i class="fa fa-eye"></i> 2344</a></small>
                            </div><!-- end meta -->

                            <div class="post-sharing">
                                <ul class="list-inline">
                                    <li><a href="#" class="fb-button btn btn-primary"><i class="fa fa-facebook"></i> <span class="down-mobile">Share on Facebook</span></a></li>
                                    <li><a href="#" class="tw-button btn btn-primary"><i class="fa fa-twitter"></i> <span class="down-mobile">Tweet on Twitter</span></a></li>
                                    <li><a href="#" class="gp-button btn btn-primary"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div><!-- end post-sharing -->
                        </div><!-- end title -->

                        <div class="blog-content">  
                            <h4 class="recipe-text-h4">Съставки:</h4>
                            <p class="recipe-text box-shadow--lightgrey"><%= recipe.ingredients %></p>
                            <hr class="invis1">
                            <h4 class="recipe-text-h4">Описание:</h4>
                            <p class="recipe-text box-shadow--lightgrey"><%= recipe.content %></p>
                        </div><!-- end content -->

                       
                        <% if (username == recipe.author.username) { %>
                            <div class="">
                                <ul class="list-inline">
                                        <li class="d-inline"><a href="/blog/recipe/<%= recipe._id %>/update" class="btn btn-secondary mr-4"> <span class="down-mobile">Редакция</span></a></li>
                                    <form class="form-button" action="/blog/recipe/<%= recipe._id %>/delete" method="POST">
                                        <li><button class="btn btn-danger"> <span class="down-mobile">Изтриване</span></button></li>
                                    </form>
                                </ul>
                            </div>
                        <% } %>

                        <hr class="invis1">


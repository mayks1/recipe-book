<%- include('includes/head') %>
<%- include('includes/header') %>

<section class="section wb">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <!-- Display Reg. Errors -->
                <% if (errors.length > 0) { %>

                    <% errors.forEach((error) => { %>
                         <li class="alert alert-danger"><%= error %></li>
                     <% }) %>

                 <% } %>
                 <!-- END Display Reg. Errors -->
                <div class="sidebar">
                    <div class="widget box-shadow--lightgrey">
                        <div class="alert alert-secondary text-center text-uppercase" role="alert">
                            Вход
                        </div>
                        <hr class="invis">

                        <form action="/auth/login" class="form-wrapper" method="POST">
                            <input type="email" name="email" class="form-control" placeholder="Имейл:">
                            <input type="password" name="password" class="form-control" placeholder="Парола:">
                            <button type="submit" class="btn btn-primary mt-3">Вход <i
                                    class="fa fa-envelope-open-o"></i></button>
                        </form>
                    </div>
                </div>
            </div><!-- end col -->

            <!-- SIDE BAR -->
            <%- include('includes/sidebar') %>
        </div><!-- end row -->
    </div><!-- end container -->
</section>


<%- include('includes/footer') %>